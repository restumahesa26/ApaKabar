<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border_blue"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPhotoMessage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/photo_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamaMessage"
        style="@style/TextView.PoppinsBold000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Alfath Ariz Rizkullah"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoMessage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPesanMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Apa Kabar?"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoMessage"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaMessage" />

    <Button
        android:id="@+id/btnTerimaPesan"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#FFF"
        android:text="Terima"
        android:background="@drawable/button"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>